{
    "manifest_version": 3,
    "name": "Webpage Subject Classifier",
    "version": "1.0",
    "description": "Classify web pages into Mathematics, Language Arts, Social Studies, or Science using an AI model.",
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "action": {
      "default_title": "Scan Page for Standards Alignment",
      "default_popup": "index.html",
      "default_icon": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "minimum_chrome_version": "102",
    "omnibox": {
      "keyword": "@standards"
    }
  }
